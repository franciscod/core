r0 bh     black hole, always 00
r1 a      general purpose
r2 b      general purpose
r3 c      general purpose
r4 d      general purpose
r5 e      general purpose
r6 f      general purpose
r7 g      general purpose

                    76543210
r8 fl         flags Q___CNVZ
r9 ip rip pc  instruction pointer
ra sp         stack pointer
rb ??         ????
rc cs         code segment (need +1 bit -- 8 bit)
rd ds         data segment (need +2 bit -- 8 bit)
re lr         link register
rf wh         white hole, always ff
        

call addr
    mov  lr addr
    xchg lr ip

ret
    mov  ip lr

ip un valor
registro un valor de ip

                                            AKA
store [imm10] r4    11 AA AAAA AAAA RRRR    writeToMemImmediate
load  r4 [imm10]    10 AA AAAA AAAA RRRR    readFromMemImmediate

mov   r4 imm8       01 11 DDDD DDDD RRRR    SetRegister

sl    r4 imm4       01 10 111Q _III RRRR 
sr    r4 imm4       01 10 110Q LIII RRRR    L if logical
cmp   r4 r4         01 10 101Q RRRR RRRR    Compare 
and   r4 r4         01 10 100Q RRRR RRRR 
or    r4 r4         01 10 011Q RRRR RRRR 
xor   r4 r4         01 10 010Q RRRR RRRR    not (white)
sub   r4 r4         01 10 001Q RRRR RRRR    
add   r4 r4         01 10 000Q RRRR RRRR 

setcc imm8          01 01 ___Q MMMM FFFF     
    ... clearcc

store [r4] r4       00 11 ___C RRRR RRRR    writeToMemIndirect
load  r4 [r4]       00 10 ___C RRRR RRRR    readFromMemIndirect
xchg  r4 r4         00 01 ___C RRRR RRRR    call
mov   r4 r4         00 00 ___C RRRR RRRR    CopyRegister, return, nop


memoria:
    1kb datos
        direccionable a 8bit (10bit addr)
    1kb codigo (512 ins de 16b)
        direccionable a 16bit (9bit addr)
