r0 bh     black hole, always 00
r1 a      general purpose
r2 b      general purpose
r3 c      general purpose
r4 d      general purpose
r5 e      general purpose
r6 f      general purpose
r7 g      general purpose

                    76543210
r8 fl         flags S___CNVZ       # skip, carry, negative, overflow, zero
r9 ip rip pc  instruction pointer
ra sp         stack pointer
rb ??         ????
rc cs         code segment (need +1 bit -- 8 bit)
rd ds         data segment (need +2 bit -- 8 bit)
re lr         link register
rf wh         white hole, always ff
        

call addr
    mov  lr addr
    xchg lr ip

ret
    mov  ip lr

ip un valor
registro un valor de ip

                                             AKA
storei [imm10] r4    11 AA AAAA AAAA RRRR    writeToMemImmediate
loadi  r4 [imm10]    10 AA AAAA AAAA RRRR    readFromMemImmediate

movi   r4 imm8       01 11 DDDD DDDD RRRR    SetRegister

sl     r4 imm4       01 10 111S _III RRRR 
sr     r4 imm4       01 10 110S LIII RRRR    L if logical
cmp    r4 r4         01 10 101S RRRR RRRR    Compare 
sub    r4 r4         01 10 100S RRRR RRRR    
add    r4 r4         01 10 011S RRRR RRRR 
xor    r4 r4         01 10 010S RRRR RRRR    not (white)
or     r4 r4         01 10 001S RRRR RRRR 
and    r4 r4         01 10 000S RRRR RRRR 

setcc  imm8          01 01 ___S MMMM FFFF     
    ... clearcc

storer [r4] r4       00 11 ___S RRRR RRRR    writeToMemIndirect
loadr  r4 [r4]       00 10 ___S RRRR RRRR    readFromMemIndirect
xchg   r4 r4         00 01 ___S RRRR RRRR    call
movr   r4 r4         00 00 ___S RRRR RRRR    CopyRegister, return, nop


memoria:
    1kb datos
        direccionable a 8bit (10bit addr)
    1kb codigo (512 ins de 16b)
        direccionable a 16bit (9bit addr)
